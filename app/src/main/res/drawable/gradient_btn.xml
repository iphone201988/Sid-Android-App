<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:angle="0"
        android:startColor="#CAB8FF"
        android:endColor="#FFD9DA"
        android:type="linear" />

    <!-- Rounded corners -->
    <corners android:radius="@dimen/_10sdp" />

    <!-- Optional padding -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />

</shape>
