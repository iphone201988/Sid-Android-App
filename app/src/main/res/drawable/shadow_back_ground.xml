<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background gradient (lighter, soft lavender) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#ECECFA"
                android:centerColor="#FFFFFF"
                android:endColor="#ECECFA"
                android:angle="270" />

            <corners android:radius="50dp" />

            <!-- Outer border (lighter purple) -->
            <stroke
                android:width="2dp"
                android:color="#4A3F6D" />
        </shape>
    </item>

    <!-- Inner shadow (lighter & softer) -->
    <item android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="48dp" />
            <stroke
                android:width="2dp"
                android:color="#553F7052" /> <!-- softer inner shadow -->
        </shape>
    </item>
</layer-list>
