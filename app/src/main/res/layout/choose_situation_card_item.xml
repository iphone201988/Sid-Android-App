<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="size"
            type="Integer" />

        <variable
            name="callback"
            type="com.tech.sid.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.tech.sid.ui.onboarding_ques.ChooseSituationModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainLayout"
        setColorCardBlur="@{true}"
        setColorCard="@{bean.colorsValue}"
        setSelectedBorder="@{bean.iselected}"
        android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardBackgroundColor="@color/text_color_splash"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@+id/cardIII">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_21sdp"
            android:paddingVertical="@dimen/_20sdp">


            <TextView
                style="@style/inter_medium_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{bean.titleValue}"
                android:textColor="@color/text_color_splash"
                android:textSize="@dimen/_11ssp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>