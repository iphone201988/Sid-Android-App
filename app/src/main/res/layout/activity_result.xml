<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.tech.sid.ui.dashboard.result_screen.ResultActivityVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card_view_color_auth">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/_14sdp"
            android:layout_height="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:onClick="@{v->vm.onClick(v)}"
            android:src="@drawable/app_back_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/app_logo_ll"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/back_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/back_button">

            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:scaleType="fitXY"
                android:src="@drawable/splash_app_logo" />

            <TextView
                android:id="@+id/headingTitle"
                style="@style/dm_sans_semibold_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="@string/app_name_splash"
                android:textColor="@color/text_color_splash"
                android:textSize="@dimen/_17ssp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_5sdp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_logo_ll">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="true"
                android:paddingTop="@dimen/_25sdp"
                android:paddingBottom="@dimen/_60sdp">

                <LinearLayout
                    android:id="@+id/centerHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_20sdp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        style="@style/dm_sans_bold_textview"
                        textLinearGradient='@{"view"}'
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/here_s_what_we_nlearned_about_you"
                        android:textSize="@dimen/_24ssp" />

                    <TextView
                        style="@style/inter_regular_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="@string/a_thoughtful_explorer_with_a_strong_heart_deeply_open_quietly_reflective_and_learning_to_trust_connection"
                        android:textColor="@color/text_color_splash"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/graphChatCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/graph_background"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/centerHeading">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/graphTitle"
                            style="@style/dm_sans_bold_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="@string/personality_profile"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_10ssp" />

                        <!--                    <com.github.mikephil.charting.charts.RadarChart-->
                        <!--                        android:id="@+id/classificationChart"-->
                        <!--                        android:layout_width="match_parent"-->
                        <!--                        android:layout_height="300dp"-->
                        <!--                        android:layout_margin="0dp"-->
                        <!--                        android:padding="0dp"-->
                        <!--                        app:layout_constraintTop_toBottomOf="@+id/card_toggle" />-->
                        <com.tech.sid.ui.dashboard.result_screen.RadarChart
                            android:id="@+id/classificationChart"
                            android:layout_width="match_parent"
                            android:layout_height="200dp" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            app:cardBackgroundColor="@color/stepper_color_1"
                            app:cardCornerRadius="@dimen/_15sdp"
                            app:cardElevation="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/centerHeading">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/graphSubTitle"
                                    style="@style/dm_sans_bold_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginVertical="@dimen/_10sdp"
                                    android:gravity="start"
                                    android:text="@string/summary"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_13ssp" />

                                <TextView
                                    android:id="@+id/graphSubSubTitle"
                                    style="@style/inter_regular_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:gravity="start"
                                    android:text="@string/you_re_high_in_openness_and_gratitude_which_suggests_creativity_and_emotional_depth_your_moderate_neuroticism_may_point_to_emotional_sensitivity"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_11ssp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView

                    android:id="@+id/progressCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/card_color_result"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/graphChatCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/attachment_style"
                            style="@style/dm_sans_bold_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="@string/attachment_style"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.tech.sid.ui.dashboard.result_screen.CustomCircleProgressView
                                android:id="@+id/circleView"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginHorizontal="@dimen/_25sdp"
                                app:cpv_autoTextSize="true"
                                app:cpv_barColor="#B5EAEA"
                                app:cpv_barWidth="@dimen/_12sdp"
                                app:cpv_innerContourSize="0dp"
                                app:cpv_maxValue="100"
                                app:cpv_outerContourSize="0dp"
                                app:cpv_rimColor="#433F70"
                                app:cpv_rimWidth="@dimen/_12sdp"
                                app:cpv_seekMode="true"
                                app:cpv_showUnit="true"
                                app:cpv_text="Secure\n78%"
                                app:cpv_textColor="#433F70"
                                app:cpv_textScale="1"
                                app:cpv_unit=""
                                app:cpv_unitColor="#433F70"
                                app:cpv_unitPosition="right_top"
                                app:cpv_unitScale="1"
                                app:cpv_value="50"

                                app:layout_constraintEnd_toStartOf="@id/circleView2"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <com.tech.sid.ui.dashboard.result_screen.CustomCircleProgressView
                                android:id="@+id/circleView2"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginHorizontal="@dimen/_25sdp"
                                app:cpv_autoTextSize="true"
                                app:cpv_barColor="#B5EAEA"
                                app:cpv_barWidth="@dimen/_12sdp"
                                app:cpv_innerContourSize="0dp"
                                app:cpv_maxValue="100"
                                app:cpv_outerContourSize="0dp"
                                app:cpv_rimColor="#433F70"
                                app:cpv_rimWidth="@dimen/_12sdp"
                                app:cpv_seekMode="true"
                                app:cpv_showUnit="true"
                                app:cpv_text="Anxious\n78%"
                                app:cpv_textColor="#433F70"
                                app:cpv_textScale="1"
                                app:cpv_unit=""
                                app:cpv_unitColor="#433F70"
                                app:cpv_unitPosition="right_top"
                                app:cpv_unitScale="1"
                                app:cpv_value="50"

                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/circleView"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guidelineLeft"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.25" />

                            <com.tech.sid.ui.dashboard.result_screen.CustomCircleProgressView

                                android:id="@+id/circleView3"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_100sdp"
                                android:layout_marginHorizontal="@dimen/_25sdp"
                                app:cpv_autoTextSize="true"
                                app:cpv_barColor="#B5EAEA"
                                app:cpv_barWidth="@dimen/_12sdp"
                                app:cpv_innerContourSize="0dp"
                                app:cpv_maxValue="100"
                                app:cpv_outerContourSize="0dp"
                                app:cpv_rimColor="#433F70"
                                app:cpv_rimWidth="@dimen/_12sdp"
                                app:cpv_seekMode="true"
                                app:cpv_showUnit="true"
                                app:cpv_text="Avoidant\n78%"
                                app:cpv_textColor="#433F70"
                                app:cpv_textScale="1"
                                app:cpv_unit=""
                                app:cpv_unitColor="#433F70"
                                app:cpv_unitPosition="right_top"
                                app:cpv_unitScale="1"
                                app:cpv_value="70"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="@+id/guidelineRight"
                                app:layout_constraintStart_toStartOf="@+id/guidelineLeft"

                                app:layout_constraintTop_toBottomOf="@+id/circleView2" />

                            <androidx.constraintlayout.widget.Guideline
                                android:id="@+id/guidelineRight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintGuide_percent="0.75" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            app:cardBackgroundColor="@color/stepper_color_2"
                            app:cardCornerRadius="@dimen/_15sdp"
                            app:cardElevation="0dp"
                            app:layout_constraintTop_toBottomOf="@+id/centerHeading">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/summary"
                                    style="@style/dm_sans_bold_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginVertical="@dimen/_10sdp"
                                    android:gravity="start"
                                    android:text="@string/summary"
                                    android:textColor="@color/text_color_splash"
                                    android:textSize="@dimen/_13ssp" />

                                <TextView
                                    android:id="@+id/graphSubSubTitle2"
                                    style="@style/inter_regular_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:gravity="start"
                                    android:text="@string/your_attachment_style_is_layered_at_your_core_you_lean_secure_but_when_under_emotional_strain_avoidant_patterns_may_surface_anxious_tendencies_are_present_but_less_dominant"
                                    android:textColor="@color/text_color_splash"
                                    android:textSize="@dimen/_11ssp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView

                    android:id="@+id/insightCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/progressCardView">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_30sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:padding="@dimen/_10sdp">

                        <!-- Top TextView: "Your Top 4 Insights" -->
                        <TextView
                            android:id="@+id/your_top_4_insights"
                            style="@style/dm_sans_bold_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:gravity="center"
                            android:text="@string/your_top_4_insights"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_10ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <!-- First Insight: Dispositional Traits -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_dispositional_traits"
                            android:layout_width="@dimen/_34sdp"
                            android:layout_height="@dimen/_34sdp"
                            app:cardBackgroundColor="@color/stepper_color_1"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_dispositional_traits_subtitle"
                            app:layout_constraintEnd_toStartOf="@id/text_dispositional_traits_title"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/text_dispositional_traits_title">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/icon_brain" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/text_dispositional_traits_title"
                            style="@style/dm_sans_semibold_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="start"
                            android:text="@string/dispositional_traits"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/card_dispositional_traits"
                            app:layout_constraintTop_toBottomOf="@+id/your_top_4_insights" />

                        <TextView
                            android:id="@+id/text_dispositional_traits_subtitle"
                            style="@style/inter_regular_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="start"
                            android:text="@string/reflective_sensitive"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintBottom_toBottomOf="@id/card_dispositional_traits"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/card_dispositional_traits"
                            app:layout_constraintTop_toBottomOf="@id/text_dispositional_traits_title" />

                        <!-- Second Insight: Relational Tendencies -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_relational_tendencies"
                            android:layout_width="@dimen/_34sdp"
                            android:layout_height="@dimen/_34sdp"
                            app:cardBackgroundColor="@color/stepper_color_2"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_relational_tendencies_subtitle"
                            app:layout_constraintEnd_toStartOf="@id/text_relational_tendencies_title"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/text_relational_tendencies_title">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/icon_handshake" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/text_relational_tendencies_title"
                            style="@style/dm_sans_semibold_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="start"
                            android:text="@string/relational_tendencies"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/card_relational_tendencies"
                            app:layout_constraintTop_toBottomOf="@id/text_dispositional_traits_subtitle" />

                        <TextView
                            android:id="@+id/text_relational_tendencies_subtitle"
                            style="@style/inter_regular_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="start"
                            android:text="@string/secure_but_cautious"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintBottom_toBottomOf="@id/card_relational_tendencies"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/card_relational_tendencies"
                            app:layout_constraintTop_toBottomOf="@id/text_relational_tendencies_title" />

                        <!-- Third Insight: Wellbeing Snapshot -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_wellbeing_snapshot"
                            android:layout_width="@dimen/_34sdp"
                            android:layout_height="@dimen/_34sdp"
                            app:cardBackgroundColor="@color/stepper_color_3"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_wellbeing_snapshot_subtitle"
                            app:layout_constraintEnd_toStartOf="@id/text_wellbeing_snapshot_title"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/text_wellbeing_snapshot_title">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/icon_crop" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/text_wellbeing_snapshot_title"
                            style="@style/dm_sans_semibold_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="start"
                            android:text="@string/wellbeing_snapshot"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/card_wellbeing_snapshot"
                            app:layout_constraintTop_toBottomOf="@id/text_relational_tendencies_subtitle" />

                        <TextView
                            android:id="@+id/text_wellbeing_snapshot_subtitle"
                            style="@style/inter_regular_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="start"
                            android:text="@string/emotionally_steady"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_11ssp"
                            app:layout_constraintBottom_toBottomOf="@id/card_wellbeing_snapshot"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/card_wellbeing_snapshot"
                            app:layout_constraintTop_toBottomOf="@id/text_wellbeing_snapshot_title" />

                        <!-- Fourth Insight: Thinking Style -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_thinking_style"
                            android:layout_width="@dimen/_34sdp"
                            android:layout_height="@dimen/_34sdp"

                            app:cardBackgroundColor="@color/stepper_color_4"
                            app:cardCornerRadius="@dimen/_5sdp"
                            app:layout_constraintBottom_toBottomOf="@+id/text_thinking_style_subtitle"
                            app:layout_constraintEnd_toStartOf="@id/text_thinking_style_title"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/text_thinking_style_title">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/_5sdp"
                                android:src="@drawable/icon_bran_info" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/text_thinking_style_title"
                            style="@style/dm_sans_semibold_textview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="start"
                            android:text="@string/thinking_style"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/card_thinking_style"
