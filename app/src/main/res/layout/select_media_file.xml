<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.tech.sid.base.utils.BaseCustomDialog.Listener" />

    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_25sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_title"
                    style="@style/dm_sans_medium_textview"
                    android:layout_gravity="center_horizontal"

                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->callback.onViewClick(v)}"
                    android:padding="@dimen/_10sdp"
                    android:text="Select from Camera"
                    android:textColor="@color/text_color_splash"
                    android:textSize="@dimen/_16sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/text_color_splash" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_title_one"
                    style="@style/dm_sans_medium_textview"
                    android:layout_gravity="center_horizontal"

                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->callback.onViewClick(v)}"
                    android:padding="@dimen/_10sdp"
                    android:text="Select from Gallery"
                    android:textColor="@color/text_color_splash"
                    android:textSize="@dimen/_16sdp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/text_color_splash" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_cancel"
                    style="@style/dm_sans_medium_textview"
                    android:layout_gravity="center_horizontal"

                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->callback.onViewClick(v)}"
                    android:padding="@dimen/_10sdp"
                    android:text="Cancel"
                    android:textColor="@color/text_color_splash"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>