<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bean"
            type="com.tech.sid.ui.dashboard.simulation_insights.SimulationInsightsResponse" />

        <variable
            name="vm"
            type="com.tech.sid.ui.dashboard.dashboard_with_fragment.insights_fragment.InsightsFragmentVm" />
    </data>

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/card_view_color_auth">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_dashboard"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/_15sdp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="start|center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/bellNotification"
                    app:layout_constraintEnd_toStartOf="@+id/bellNotification"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/bellNotification">

                    <LinearLayout
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:background="@drawable/homepage_calender" />

                    <TextView
                        android:id="@+id/timeDate"
                        style="@style/inter_semi_bold_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="Tue, 25 June 2025"
                        android:textColor="@color/text_color_splash"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bellNotification"
                    android:layout_width="@dimen/_39sdp"
                    android:layout_height="@dimen/_39sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@drawable/home_notification"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/profileIcon"
                    android:layout_width="@dimen/_39sdp"
                    android:layout_height="@dimen/_39sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_27sdp"
                    android:background="@drawable/home_profile_icon"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bellNotification" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="@+id/profileIcon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/profileIcon"
                    app:layout_constraintTop_toTopOf="@+id/profileIcon">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/dm_sans_bold_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:text="Hi,John doe"
                        android:textColor="@color/text_color_splash"
                        android:textSize="@dimen/_17ssp" />

                    <TextView
                        style="@style/inter_regular_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text="Todayâ€™s Emotional Check-In"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9ssp" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/titleBody"
                style="@style/dm_sans_bold_textview"
                textLinearGradient='@{"view"}'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/your_insights"
                android:textSize="@dimen/_24ssp"
                app:layout_constraintTop_toBottomOf="@+id/layoutTop" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleBody">

                <androidx.cardview.widget.CardView
                    android:id="@+id/CardMainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_13sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_15"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/your_emotional_trend_this_week"
                            style="@style/dm_sans_bold_textview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:gravity="center"
                            android:text="@string/your_emotional_trend_this_week"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_13ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_weight="0.5"
                                app:cardBackgroundColor="@color/white_50"
                                app:cardCornerRadius="@dimen/_13sdp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginVertical="@dimen/_15sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="@dimen/_13sdp"
                                            android:layout_height="@dimen/_13sdp"
                                            android:background="@drawable/mood_kid" />

                                        <TextView
                                            android:id="@+id/Mood"
                                            style="@style/inter_medium_textview"
                                            textLinearGradient='@{"view"}'
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:text="@string/mood"
                                            android:textColor="@color/text_color_splash"
                                            android:textSize="@dimen/_9ssp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="@dimen/_13sdp"
                                            android:layout_height="@dimen/_13sdp"
                                            android:background="@drawable/up_arrow_home" />

                                        <TextView

                                            android:id="@+id/mostly_balanced"
                                            style="@style/inter_medium_textview"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:text="@string/mostly_balanced"
                                            android:textColor="@color/text_color_splash"
                                            android:textSize="@dimen/_11ssp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_weight="0.5"
                                app:cardBackgroundColor="@color/white_50"
                                app:cardCornerRadius="@dimen/_13sdp"
                                app:cardElevation="0dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"


                                    android:layout_marginHorizontal="@dimen/_10sdp"
                                    android:layout_marginVertical="@dimen/_15sdp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="@dimen/_13sdp"
                                            android:layout_height="@dimen/_13sdp"
                                            android:background="@drawable/fire_home" />

                                        <TextView
                                            android:id="@+id/reflection_streak"
                                            style="@style/inter_medium_textview"
                                            textLinearGradient='@{"view"}'
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:text="@string/reflection_streak"
                                            android:textColor="@color/text_color_splash"
                                            android:textSize="@dimen/_9ssp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="@dimen/_13sdp"
                                            android:layout_height="@dimen/_13sdp"
                                            android:background="@drawable/up_arrow_home" />

                                        <TextView

                                            android:id="@+id/days_in_a_row"
                                            style="@style/inter_medium_textview"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:gravity="center"
                                            android:text="@string/_3_days_in_a_row"
                                            android:textColor="@color/text_color_splash"
                                            android:textSize="@dimen/_11ssp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />
                                    </LinearLayout>
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_15sdp"

                            android:layout_marginTop="@dimen/_15sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_10sdp"

                            android:paddingVertical="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/white_50"
                            app:cardCornerRadius="@dimen/_13sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="@dimen/_10sdp"
                                android:layout_marginVertical="@dimen/_15sdp"
                                android:gravity="center"
                                android:orientation="vertical">


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/_13sdp"
                                        android:layout_height="@dimen/_13sdp"
                                        android:background="@drawable/mood_kid" />

                                    <TextView

                                        style="@style/inter_medium_textview"
                                        textLinearGradient='@{"view"}'
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:text="@string/most_used_emotion"
                                        android:textColor="@color/text_color_splash"
                                        android:textSize="@dimen/_9ssp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:layout_width="@dimen/_13sdp"
                                        android:layout_height="@dimen/_13sdp"
                                        android:background="@drawable/up_arrow_home"
                                        android:rotation="180" />

                                    <TextView


                                        style="@style/inter_medium_textview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:gravity="center"
                                        android:text="@string/overwhelmed"
                                        android:textColor="@color/text_color_splash"
                                        android:textSize="@dimen/_11ssp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />
                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_15sdp"

                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_10sdp"

                            android:paddingVertical="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/white_50"
                            app:cardCornerRadius="@dimen/_13sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <com.tech.sid.GradientTextView
                                    style="@style/inter_medium_textview"
                                    android:layout_width="wrap_content"

                                    android:layout_height="wrap_content"
                                    android:gravity="center"


                                    android:padding="@dimen/_10sdp"
                                    android:text="@string/mood_trend"
                                    android:textColor="@color/text_color_splash"
                                    android:textSize="@dimen/_9ssp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />

                                <com.tech.sid.WeekdayLineGraphView
                                    android:id="@+id/graphView"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_125sdp"
                                    android:layout_marginTop="@dimen/_5sdp" />

                                <TextView
                                    style="@style/inter_medium_textview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:text="@string/you_re_gaining_emotional_steadiness_each_day_2"
                                    android:textColor="@color/text_color_splash"
                                    android:textSize="@dimen/_9ssp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"

                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="@dimen/_10sdp"

                            android:paddingVertical="@dimen/_10sdp"
                            app:cardBackgroundColor="@color/white_50"
                            app:cardCornerRadius="@dimen/_13sdp"
                            app:cardElevation="0dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="@dimen/_5sdp">

                                <com.tech.sid.GradientTextView
                                    style="@style/inter_medium_textview"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_7sdp"
                                    android:gravity="center"
                                    android:text="@string/reflect_on_your_week"
                                    android:textColor="@color/text_color_splash"
                                    android:textSize="@dimen/_11ssp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />

                                <TextView
                                    style="@style/dm_sans_italic_textview"
                                    textColorGradientColor='@{"You ve been feeling Overwhelmed a lot this week. Taking a moment to reflect can help."}'
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:gravity="start"
                                    android:textColor="@color/text_color_splash"
                                    android:textSize="@dimen/_7ssp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />

                                <TextView
                                    style="@style/inter_italic_textview"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    android:gravity="start"
                                    android:text="What&#39;s one small step you can take today to ease a feeling of overwhelm?"
                                    android:textColor="@color/text_home_last_journal_entry"
                                    android:textSize="@dimen/_7ssp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/moodCardMain" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_15sdp"

                            android:layout_marginBottom="@dimen/_15sdp"
                            app:cardBackgroundColor="@color/text_color_splash"
                            app:cardCornerRadius="@dimen/_20sdp"
                            app:cardElevation="0dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/emotional_snapshot"
                    style="@style/dm_sans_bold_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:text="@string/your_insights"
                    android:textColor="@color/text_color_splash"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/CardMainLayout" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvgetStarted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:nestedScrollingEnabled="true"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/emotional_snapshot" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_15sdp"
                    app:layout_constraintTop_toBottomOf="@+id/rvgetStarted" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>