<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="size"
            type="Integer" />

        <variable
            name="callback"
            type="com.tech.sid.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.tech.sid.ui.onboarding_ques.StartPracticingModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/mainLayout"
        setColorCard="@{bean.colorsValue}"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
       android:layout_margin="@dimen/_8sdp"
        android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp">
        <LinearLayout
            android:padding="@dimen/_20sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                setColorLinear="@{bean.imageValue}"
                android:layout_width="@dimen/_29sdp"
                android:layout_height="@dimen/_29sdp"/>
            <TextView
                android:gravity="center"
                android:id="@+id/headingTitle"
                style="@style/inter_medium_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@{bean.titleValue}"
                android:textColor="@color/text_color_splash"
                android:textSize="@dimen/_9ssp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>