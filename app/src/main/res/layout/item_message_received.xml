<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_5sdp"
    android:gravity="start">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F0EBFF"
        android:maxWidth="@dimen/_230sdp"
        app:cardCornerRadius="@dimen/_9sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_marginVertical="@dimen/_3sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.tech.sid.LoadingDotsView
                android:paddingHorizontal="12dp"
                android:paddingVertical="5dp"
                android:visibility="gone"
                android:id="@+id/loadingDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/text_message_received"
                style="@style/inter_medium_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textColor="@color/text_color_splash"
                android:textSize="@dimen/_9sdp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
