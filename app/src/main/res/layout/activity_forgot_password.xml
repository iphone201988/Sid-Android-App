<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.tech.sid.ui.dashboard.dashboard_with_fragment.change_password.ChangePasswordVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/auth_bg"
        android:fitsSystemWindows="true">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mainNested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:fillViewport="true"
            android:focusableInTouchMode="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:src="@drawable/app_back_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/app_logo_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/back_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/back_button">

                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/splash_app_logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/headingTitle"
                        style="@style/dm_sans_semibold_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/app_name_splash"
                        android:textColor="@color/text_color_splash"
                        android:textSize="@dimen/_17ssp"
                        app:layout_constraintTop_toTopOf="@id/app_logo"
                        app:layout_constraintBottom_toBottomOf="@id/app_logo"
                        app:layout_constraintStart_toEndOf="@id/app_logo" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    app:cardBackgroundColor="@color/card_view_color_auth"
                    app:cardCornerRadius="@dimen/_13sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/app_logo_ll">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/card_view_color_auth"
                        android:paddingBottom="@dimen/_20sdp"
                        app:cornerRadius="@dimen/_13sdp"

                        >

                        <TextView

                            android:id="@+id/get_started_now"
                            style="@style/dm_sans_bold_textview"
                            textLinearGradient='@{"view"}'
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/change_password"
                            android:textSize="@dimen/_24ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <TextView
                            android:id="@+id/sunTitle"
                            style="@style/inter_regular_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/change_your_password"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_9ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/get_started_now" />


                        <TextView
                            android:id="@+id/newPasswordText"
                            style="@style/plus_jakarta_sans_medium_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/new_password"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_9ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sunTitle" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/newPasswordCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/_13sdp"
                            app:cardElevation="0.05dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/newPasswordText">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_36sdp"
                                android:background="@drawable/card_border">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/enter_new_password"
                                    style="@style/inter_medium_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="start|center"
                                    android:hint="@string/enter_password"
                                    android:imeOptions="actionNext"
                                    android:inputType="textPassword"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:textColor="@color/text_color_splash"
                                    android:paddingEnd="@dimen/_30sdp"
                                    android:textSize="@dimen/_10ssp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/gradientTextView" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/hide_password"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:elevation="@dimen/_12sdp"
                            android:onClick="@{v->vm.onClick(v)}"
                            android:src="@drawable/hide_password"
                            app:layout_constraintBottom_toBottomOf="@+id/newPasswordCard"
                            app:layout_constraintEnd_toEndOf="@+id/newPasswordCard"
                            app:layout_constraintTop_toTopOf="@+id/newPasswordCard" />


                        <TextView
                            android:id="@+id/newConfirmPasswordText"
                            style="@style/plus_jakarta_sans_medium_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="@string/confirm_new_password"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_9ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/newPasswordCard" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/newConfirmPasswordCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardCornerRadius="@dimen/_13sdp"
                            app:cardElevation="0.05dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/newConfirmPasswordText">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_36sdp"
                                android:background="@drawable/card_border">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/enter_new_confirm_password"
                                    style="@style/inter_medium_edit_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="start|center"
                                    android:hint="@string/enter_password"
                                    android:paddingEnd="@dimen/_30sdp"
                                    android:imeOptions="actionDone"
                                    android:inputType="textPassword"
                                    android:paddingLeft="@dimen/_10sdp"
                                    android:textColor="@color/text_color_splash"
                                    android:textSize="@dimen/_10ssp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/gradientTextView" />
                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <ImageView
                            android:id="@+id/hide_password2"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:elevation="@dimen/_12sdp"
                            android:onClick="@{v->vm.onClick(v)}"
                            android:src="@drawable/hide_password"
                            app:layout_constraintBottom_toBottomOf="@+id/newConfirmPasswordCard"
                            app:layout_constraintEnd_toEndOf="@+id/newConfirmPasswordCard"
                            app:layout_constraintTop_toTopOf="@+id/newConfirmPasswordCard" />


                        <LinearLayout
                            android:id="@+id/button"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_39sdp"
                            android:background="@drawable/button_bg"
                            android:gravity="center"
                            android:onClick="@{v->vm.onClick(v)}"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/newConfirmPasswordCard"
                            app:layout_constraintStart_toStartOf="@+id/newConfirmPasswordCard">

                            <TextView
                                android:id="@+id/enter_my_space"
                                style="@style/dm_sans_bold_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/update"
                                android:textColor="@color/text_color_splash"
                                android:textSize="@dimen/_13sdp" />
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>