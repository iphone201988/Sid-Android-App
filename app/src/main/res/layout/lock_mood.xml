<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="callback"
            type="com.tech.sid.base.utils.BaseCustomDialog.Listener" />

    </data>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_25sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_10sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_title"
                    style="@style/dm_sans_medium_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->callback.onViewClick(v)}"
                    android:padding="@dimen/_10sdp"
                    android:text="Mood Already Logged"
                    android:textColor="@color/text_color_splash"
                    android:textSize="@dimen/_16sdp" />
                <TextView
                    android:id="@+id/tv_title2"
                    style="@style/dm_sans_medium_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:foreground="?selectableItemBackground"
                    android:gravity="center_horizontal"
                    android:onClick="@{v->callback.onViewClick(v)}"
                    android:padding="@dimen/_10sdp"
                    android:text="You've already logged your mood today"
                    android:textColor="@color/text_color_splash"
                    android:textSize="@dimen/_10sdp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/yesButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_weight="1"


                    android:gravity="center"
                    android:onClick="@{v->callback.onViewClick(v)}"

                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/phoneNumberCard"
                    app:layout_constraintStart_toStartOf="@+id/phoneNumberCard">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_bg"
                        android:scaleType="fitXY"
                        app:layout_constraintBottom_toBottomOf="@+id/Logout"
                        app:layout_constraintEnd_toEndOf="@+id/Logout"
                        app:layout_constraintStart_toStartOf="@+id/Logout"
                        app:layout_constraintTop_toTopOf="@+id/Logout" />

                    <TextView
                        android:id="@+id/Logout"
                        style="@style/dm_sans_bold_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OK"
                        android:textColor="@color/text_color_splash"
                        android:textSize="@dimen/_13sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</layout>