<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.tech.sid.ui.dashboard.dashboard_with_fragment.change_password.ChangePasswordVm" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/auth_bg">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/mainNested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:fillViewport="true"
            android:focusableInTouchMode="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:onClick="@{v->vm.onClick(v)}"
                    android:src="@drawable/app_back_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/app_logo_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/back_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/back_button">

                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/splash_app_logo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/headingTitle"
                        style="@style/dm_sans_semibold_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/app_name_splash"
                        android:textColor="@color/text_color_splash"
                        android:textSize="@dimen/_17ssp"
                        app:layout_constraintTop_toTopOf="@id/app_logo"
                        app:layout_constraintBottom_toBottomOf="@id/app_logo"
                        app:layout_constraintStart_toEndOf="@id/app_logo" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_150sdp"
                    app:cardBackgroundColor="@color/card_view_color_auth"
                    app:cardCornerRadius="@dimen/_13sdp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/app_logo_ll">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/card_view_color_auth"

                        android:paddingBottom="@dimen/_20sdp"
                        app:cornerRadius="@dimen/_13sdp">

                        <TextView

                            android:id="@+id/get_started_now"
                            style="@style/dm_sans_bold_textview"
                            textLinearGradient='@{"view"}'
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:text="@string/verify"
                            android:textSize="@dimen/_24ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/sunTitle"
                            style="@style/inter_regular_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:text="@string/we_have_sent_code_to_your_email_to_verify"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_9ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/get_started_now" />


                        <TextView
                            android:id="@+id/emailText"
                            style="@style/plus_jakarta_sans_medium_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Enter OTP"
                            android:textColor="@color/text_color_splash"
                            android:textSize="@dimen/_9ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/sunTitle" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/clOtt"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_60sdp"
                            android:layout_marginHorizontal="@dimen/_15sdp"

                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/emailText">


                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/otpET1"
                                style="@style/inter_medium_edit_text"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/card_border"
                                android:gravity="center"
                                android:hint="-"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:nextFocusForward="@id/otpET2"
                                android:textColor="@color/text_color_splash"
                                android:textColorHint="@color/hint_text_color"
                                android:textSize="@dimen/_11ssp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/otpET2"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/otpET2"
                                style="@style/inter_medium_edit_text"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/card_border"
                                android:gravity="center"
                                android:hint="-"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:nextFocusForward="@id/otpET3"
                                android:textColor="@color/text_color_splash"
                                android:textColorHint="@color/hint_text_color"
                                android:textSize="@dimen/_11ssp"
                                app:layout_constraintBottom_toBottomOf="@+id/otpET1"
                                app:layout_constraintEnd_toStartOf="@+id/otpET3"
                                app:layout_constraintStart_toEndOf="@+id/otpET1"
                                app:layout_constraintTop_toTopOf="@+id/otpET1" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/otpET3"
                                style="@style/inter_medium_edit_text"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:background="@drawable/card_border"
                                android:gravity="center"
                                android:hint="-"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="1"
                                android:nextFocusForward="@id/otpET4"
                                android:textColor="@color/text_color_splash"
                                android:textColorHint="@color/hint_text_color"
                                android:textSize="@dimen/_11ssp"
                                app:layout_constraintBottom_toBottomOf="@+id/otpET1"
                                app:layout_constraintEnd_toStartOf="@+id/otpET4"
                                app:layout_constraintStart_toEndOf="@+id/otpET2"
                                app:layout_constraintTop_toTopOf="@+id/otpET1" />

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/otpET4"
                                style="@style/inter_medium_edit_text"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:background="@drawable/card_border"
                                android:gravity="center"
                                android:hint="-"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="@color/text_color_splash"
                                android:textColorHint="@color/hint_text_color"
                                android:textSize="@dimen/_11ssp"
                                app:layout_constraintBottom_toBottomOf="@+id/otpET1"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/otpET3"
                                app:layout_constraintTop_toTopOf="@+id/otpET1" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <LinearLayout
                            android:id="@+id/button"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_39sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:background="@drawable/button_bg"
                            android:gravity="center"
                            android:onClick="@{v->vm.onClick(v)}"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="@+id/clOtt"
                            app:layout_constraintStart_toStartOf="@+id/clOtt"
                            app:layout_constraintTop_toBottomOf="@+id/clOtt">

                            <TextView
                                android:id="@+id/enter_my_space"
                                style="@style/dm_sans_bold_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/verify"
                                android:textColor="@color/text_color_splash"
                                android:textSize="@dimen/_13sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llCountdown"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button">

                            <TextView
                                android:id="@+id/resend_code_in"
                                style="@style/inter_medium_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"

                                android:text="@string/resend_code_in"
                                android:textColor="@color/text_color_donot_have_id"
                                android:textSize="@dimen/_9ssp"
                                app:layout_constraintEnd_toEndOf="@+id/passwordCard"
                                app:layout_constraintTop_toBottomOf="@+id/passwordCard" />

                            <TextView
                                android:id="@+id/countDown"
                                style="@style/inter_semi_bold_textview"
                                textLinearGradient='@{"view"}'
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:onClick="@{v->vm.onClick(v)}"
                                android:text="23s"
                                android:textColor="@color/stepper_color_1"
                                android:textSize="@dimen/_9ssp"
                                app:layout_constraintEnd_toEndOf="@+id/passwordCard"
                                app:layout_constraintTop_toBottomOf="@+id/passwordCard" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvResendCode"
                            style="@style/inter_semi_bold_textview"
                            textLinearGradient='@{"view"}'
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_12sdp"
                            android:layout_height="match_parent"
                            android:onClick="@{v->vm.onClick(v)}"
                            android:text="Resend Code"
                            android:visibility="gone"
                            android:textColor="@color/stepper_color_1"
                            android:textSize="@dimen/_9ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/button" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>