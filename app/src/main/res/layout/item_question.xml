<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="size"
            type="Integer" />

        <variable
            name="callback"
            type="com.tech.sid.base.SimpleRecyclerViewAdapter.SimpleCallback" />

        <variable
            name="pos"
            type="Integer" />

        <variable
            name="bean"
            type="com.tech.sid.ui.dashboard.result_screen.EmotionalResponse" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/_8sdp"
        android:background="@drawable/bg_cons"
        android:elevation="2dp"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Question Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvQuesionId"
                style="@style/inter_medium_textview"
                setQnNumber="@{bean}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qâ€“1."
                android:textColor="@color/stepper_color_1"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tvQuestion"
                style="@style/inter_medium_textview"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{bean.text}"
                android:textColor="@color/text_color_splash"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Answer Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/select_drawable_onboardinhg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAnswer"
                setAnsText="@{bean}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="8dp"
                android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
                android:src="@drawable/edit_new" />

            <TextView
                android:id="@+id/tvEdit"
                style="@style/inter_medium_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{v->callback.onItemClick(v,bean,pos)}"
                android:paddingEnd="16dp"
                android:text="Edit"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</layout>